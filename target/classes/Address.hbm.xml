<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.ideas2it.employeemanagement.model.Address" table="address">
        <id name = "addressId" column = "id" >
            <generator class="native"/>
        </id>

        <property name = "doorNumber" column = "door_number"/>
        <property name = "street"  column = "street"/>
        <property name = "city" column = "city"/>
        <property name = "pinCode"  column = "pincode" />
        <property name = "country"  column = "country" />
        <property name = "state" column = "state"/>

        <many-to-one name="employee" 
            class="com.ideas2it.employeemanagement.model.Employee">
            <column name="employee_id"/>
        </many-to-one>

    </class>
</hibernate-mapping>
